FROM node:20-alpine

WORKDIR /app

# Install git for potential updates
RUN apk add --no-cache git

# Install nodemon for hot reloading
RUN npm install -g nodemon

# Create entrypoint script
RUN cat > /entrypoint.sh << 'EOF'
#!/bin/sh
echo "🚀 Iniciando frontend en modo desarrollo..."

# Esperar a que el código fuente esté disponible
while [ ! -f "/app/package.json" ]; do
    echo "⏳ Esperando código fuente..."
    sleep 5
done

# Actualizar código fuente antes de instalar dependencias
if [ -d ".git" ]; then
    echo "🔄 Actualizando código fuente desde remoto..."
    git pull
fi

echo "📦 Instalando dependencias..."
npm install

# Ejecutar lint antes de iniciar el servidor
if npm run lint; then
    echo "✅ Lint exitoso, iniciando servidor..."
else
    echo "❌ Error en lint. Deteniendo el proceso."
    exit 1
fi

echo "🌟 Iniciando servidor de desarrollo..."
npm start
EOF

RUN chmod +x /entrypoint.sh

# Expose port
EXPOSE 3000

# Start development server
CMD ["/entrypoint.sh"]
